{
  "name": "@avalabs/avalanchejs-v2",
  "version": "0.0.1",
  "packageManager": "yarn@1.22.18",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "sideEffects": false,
  "module": "dist/index.js",
  "scripts": {
    "start": "rollup -c --watch",
    "build": "rollup -c",
    "build:prod": "rollup -c --environment BUILD:production",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --collect-coverage=true",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint --fix  --ignore-path .gitignore \"./**/*.ts*\"",
    "lint:check": "eslint  --ignore-path .gitignore \"./**/*.ts*\"",
    "check": "tsc --noEmit",
    "tsNode": "ts-node --experimental-specifier-resolution=node -P ./debugTsConfig.json --esm",
    "bench": "yarn tsNode ./scripts/bench.ts",
    "example": "yarn tsNode ./examples/x-chain/utxos.ts",
    "debug": "yarn tsNode ./src/debug.ts"
  },
  "dependencies": {
    "@noble/hashes": "1.1.2",
    "@noble/secp256k1": "1.6.3",
    "@scure/base": "1.1.1",
    "micro-eth-signer": "0.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.5",
    "@semantic-release/npm": "9.0.1",
    "@types/jest": "28.1.6",
    "@types/node": "18.7.3",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "esbuild": "0.15.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "5.6.9",
    "jest": "28.1.3",
    "micro-bmark": "0.2.0",
    "prettier": "2.7.1",
    "rollup": "2.78.0",
    "rollup-plugin-bundle-size": "1.0.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-esbuild": "4.9.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-typescript2": "0.32.1",
    "rollup-plugin-visualizer": "5.7.1",
    "semantic-release": "19.0.3",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "ttypescript": "^1.5.13",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "^16.13 || ^18"
  },
  "repository": "git@github.com:ava-labs/avalanchejs-v2.git",
  "author": "Oliver Wang <oliver.wang@avalabs.org>",
  "license": "MIT",
  "release": {
    "branches": [
      "release"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "*",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
