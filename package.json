{
  "name": "@avalabs/avalanchejs-v2",
  "version": "1.1.3",
  "packageManager": "yarn@1.22.18",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "sideEffects": false,
  "module": "dist/es/index.js",
  "scripts": {
    "start": "rollup -c --watch",
    "build": "rollup -c",
    "build:prod": "rollup -c --environment BUILD:production",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --collect-coverage=true",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint --fix --ignore-path .gitignore \"./**/*.ts*\"",
    "lint:check": "eslint --ignore-path .gitignore \"./**/*.ts*\"",
    "check": "tsc --noEmit",
    "bench": "ts-node ./scripts/bench.ts",
    "example": "ts-node ./examples/x-chain/utxos.ts",
    "debug": "ts-node ./src/debug.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@noble/hashes": "1.1.2",
    "@noble/secp256k1": "1.6.3",
    "@scure/base": "1.1.1",
    "micro-eth-signer": "0.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "22.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.6",
    "@semantic-release/npm": "9.0.1",
    "@types/jest": "29.2.3",
    "@types/node": "18.11.9",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.15.16",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "5.7.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "micro-bmark": "0.2.0",
    "prettier": "2.7.1",
    "rollup": "2.79.1",
    "rollup-plugin-bundle-size": "1.0.3",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-esbuild": "4.10.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-typescript2": "0.33.0",
    "rollup-plugin-visualizer": "5.8.0",
    "semantic-release": "19.0.5",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "ttypescript": "1.5.13",
    "typescript": "4.8.2"
  },
  "engines": {
    "node": "^16.13 || ^18"
  },
  "repository": "git@github.com:ava-labs/avalanchejs-v2.git",
  "author": "Oliver Wang <oliver.wang@avalabs.org>",
  "license": "MIT",
  "release": {
    "branches": [
      "release"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "*",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
