{
  "compilerOptions": {
    "outDir": "./typings/",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["dom", "es2016"],
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings/**", "./node_modules/@types"]
  },
  "include": ["./src", "./examples", "__mocks__/", "dist/"],
  "exclude": ["node_modules", "typings"],
  "typeAcquisition": {
    "enable": true,
    "exclude": ["bn.js"]
  }
}
